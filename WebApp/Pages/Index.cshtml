@page
@model Area52.WebApp.Pages.IndexModel
@using Area52.Core.Domain

@{
    ViewData["Title"] = "Area 52 — Vakantiepark in de Natuur";
}

<section class="hero">
    <picture class="hero-bg">
        <img src="https://images.unsplash.com/photo-1587061949409-02df41d5e562?w=1920&q=80"
             alt="Bungalow in de natuur" loading="eager">
    </picture>
    <span class="hero-overlay" aria-hidden="true"></span>

    <hgroup class="hero-text">
        <p class="hero-subtitle">Vakantiepark in het hart van de natuur</p>
        <h1 class="hero-title">Ontsnap naar <em>rust</em> &amp; ruimte</h1>
        <p class="hero-description">
            Ontdek onze comfortabele bungalows, sfeervolle chalets en ruime kampeerplaatsen midden in de Nederlandse natuur.
            Uw perfecte vakantie begint hier.
        </p>
    </hgroup>

    <form class="booking-widget" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <label class="booking-field">
            <span>Inchecken</span>
            <input asp-for="Booking.CheckIn" type="date" />
            <span asp-validation-for="Booking.CheckIn"></span>
        </label>

        <label class="booking-field">
            <span>Uitchecken</span>
            <input asp-for="Booking.CheckOut" type="date" />
            <span asp-validation-for="Booking.CheckOut"></span>
        </label>

        <label class="booking-field">
            <span>Gasten</span>
            <input asp-for="Booking.Guests" type="number" min="1" />
            <span asp-validation-for="Booking.Guests"></span>
        </label>

        <label class="booking-field">
            <span>Accommodatie</span>
            <select asp-for="Booking.Type"
                    asp-items="Html.GetEnumSelectList<AccommodationType>()">
            </select>
            <span asp-validation-for="Booking.Type"></span>
        </label>

        <button type="submit" class="btn btn-primary btn-search">
            Zoeken
        </button>
    </form>
</section>

@if (Model.Booking.ReservationId.HasValue)
{
    <section class="booking-result">
        <h2>Reservering bevestigd</h2>

        <p>Reserveringsnummer: <strong>@Model.Booking.ReservationId</strong></p>
        <p>Status: @Model.Booking.ReservationStatus</p>

        <h3>Prijsopbouw</h3>
        <p>Bruto: @Model.Booking.GrossAmount?.ToString("C")</p>
        <p>Korting: @Model.Booking.DiscountAmount?.ToString("C")</p>
        <p><strong>Netto: @Model.Booking.NetAmount?.ToString("C")</strong></p>
    </section>
}

