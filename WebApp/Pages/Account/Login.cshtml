@page
@model Area52.WebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Inloggen";
}

<section class="accommodations-section">
    <header class="accommodations-header">
        <h2 class="accommodations-title">Inloggen</h2>
        <p class="accommodations-subtitle">
            Log in om je gegevens automatisch in te laten vullen en je reserveringen terug te zien.
        </p>
    </header>

    <article class="accommodation-card visible" style="max-width: 500px; margin: 0 auto; text-align: left;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="margin-top: 16px;">
                Inloggen
            </button>
        </form>
    </article>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}